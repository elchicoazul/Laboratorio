@model LABORATORIO.Models.Estudiante

@{
    ViewData["Title"] = "Estudiante";
}

<div class="row">
    <div class="col-md-4">  
        <h1 class="display-4">Contacto</h1>
        <form asp-controller="Estudiante" asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>    

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>               
                   
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
               <select asp-for="Email">
                <option value="Ma">Matematica</option>
                <option value="Co">Comuncacion</option>
                <option value="Pro">programacion</option>
                <option value="GF">Gestion  finaciera</option>
            </select>
            </div>
                         

                       

            <div class="form-group">
                 <button type="submit" class="btn btn-default">Registrar</button> 
            </div>                

        </form>
            
        <td>@Html.DisplayTextFor(model => model.Response)</td>    
    
    </div>
</div>